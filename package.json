{
  "name": "martinlabs-blog",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "start": "cross-env SOCKET=true node ./scripts/next-remote-watch.js ./data",
    "dev": "next dev",
    "build": "next build && node ./scripts/generate-sitemap",
    "serve": "next start",
    "analyze": "cross-env ANALYZE=true next build",
    "test:types": "tsc --build --force",
    "lint:ts": "next lint --fix --dir pages --dir components --dir lib --dir layouts --dir scripts",
    "lint:format": "prettier --check '**/*'",
    "lint:fix": "yarn -s lint:ts --fix && yarn -s lint:format --write",
    "prepare": "husky",
    "type:checks": "tsc",
    "dedupe:dependencies": "pnpm dedupe"
  },
  "dependencies": {
    "@fontsource/poppins": "5.0.14",
    "@fontsource/prompt": "5.0.14",
    "@mailchimp/mailchimp_marketing": "3.0.80",
    "@radix-ui/react-collapsible": "^1.1.0",
    "@radix-ui/react-icons": "^1.3.0",
    "@tailwindcss/forms": "0.5.7",
    "@tailwindcss/typography": "0.5.13",
    "autoprefixer": "10.4.19",
    "esbuild": "0.21.5",
    "github-slugger": "1.5.0",
    "gray-matter": "4.0.3",
    "image-size": "1.1.1",
    "mdx-bundler": "10.0.2",
    "next": "14.2.4",
    "next-themes": "0.3.0",
    "postcss": "8.4.38",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "7.1.0",
    "rehype-citation": "2.0.0",
    "rehype-preset-minify": "7.0.0",
    "rehype-prism-plus": "2.0.0",
    "rehype-slug": "6.0.0",
    "remark-gfm": "4.0.0",
    "remark-math": "6.0.0",
    "tailwindcss": "3.4.4",
    "unist-util-visit": "5.0.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "14.2.4",
    "@svgr/webpack": "8.1.0",
    "@types/react": "18.3.3",
    "@types/unist": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "5.59.9",
    "@typescript-eslint/parser": "5.59.9",
    "cross-env": "7.0.3",
    "dedent": "1.5.3",
    "eslint": "8.42.0",
    "eslint-config-next": "13.4.4",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-prettier": "4.2.1",
    "file-loader": "6.2.0",
    "globby": "11.1.0",
    "husky": "9.0.11",
    "inquirer": "9.2.23",
    "lint-staged": "13.2.2",
    "next-remote-watch": "2.0.0",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "0.3.0",
    "socket.io": "4.7.5",
    "socket.io-client": "4.7.5",
    "stylelint": "^15.7.0",
    "typescript": "5.5.2"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.4.0"
}
